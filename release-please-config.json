{
  "separate-pull-requests": false,
  "plugins": [
    {
      "type": "linked-versions",
      "groupName": "gaia",
      "components": ["backend", "frontend"]
    }
  ],
  "packages": {
    ".": {
      "release-type": "simple",
      "changelog-path": "CHANGELOG.md"
    },
    "backend": {
      "path": "backend",
      "release-type": "python",
      "version-file": "pyproject.toml",
      "component": "backend"
    },
    "frontend": {
      "path": "frontend",
      "release-type": "node",
      "version-file": "package.json",
      "component": "frontend"
    }
  }
}
